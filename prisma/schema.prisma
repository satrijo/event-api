generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Event {
  id          String   @id @default(uuid())
  title       String
  description String?
  location    String?
  date        DateTime
  participants Participant[]
}

model Participant {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id])
}



